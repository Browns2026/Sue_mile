#include <iostream>
#include <string>
using namespace std;

int main() {
    int age = 25;
    cout << "Age: " << age << endl;

    float height = 175.5;
    double weight = 70.2;
    cout << "Height: " << height << " cm" << endl;
    cout << "Weight: " << weight << " kg" << endl;

    char grade = 'A';
    cout << "Grade: " << grade << endl;

    string name = "Alice";
    cout << "Name: " << name << endl;

    bool isStudent = true; // or false only
    cout << "Is student: " << boolalpha << isStudent << endl;

    auto ageNextYear = age + 1;
    cout << "Age next year: " << ageNextYear << endl;

    return 0;
}
